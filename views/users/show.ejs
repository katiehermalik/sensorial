<body>
  <h1>User Profile</h1>
  <img id="profile-pic" class="mt-3" src="<%= user.picture %>" alt="profile-picture">
  <h2 class="mt-3"><%=user.username%></h2>
  <h2 class="mt-3"><%=user.email%></h2>
  <div class="flex-row"></div>
  <div class="d-inline-flex m-2">
    <form action="/users/<%=user._id%>?_method=DELETE" method="POST">
      <button type="submit" class="btn btn-warning m-3">Delete</button>
    </form>
    <form action="/users/<%=user._id%>/edit" method="GET">
      <button type="submit" class="btn btn-warning m-3">Update</button>
    </form>
  </div>
  </div>
</body>