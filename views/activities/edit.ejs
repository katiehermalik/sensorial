<body>
  <h1 class="mb-5">Edit Activity</h1>
  <section class="editActivityForm">
    <form action="/activities/<%= activities.id %>?_method=PUT" method="POST">
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="title">Title</label>
          <input type="text" class="form-control" name="title" id="title" value="<%=activities.title%>">
        </div>
        <div class="form-group col-md-6">
          <label for="note">Note</label>
          <input type="text" class="form-control" name="note" id="note" value="<%=activities.note%>">
        </div>
      </div>
      <div class="form-group">
        <label for="experienceDesc">Experience Description</label>
        <textarea class="form-control" name="experienceDesc" id="experienceDesc" rows="3"><%=activities.experienceDesc%></textarea>
      </div>
      <div class="form-group">
        <label for="exampleFormControlInput1">Photo</label>
        <input type="url" class="form-control" name="photo" id="photo" value="<%=activities.photo%>">
      </div>
      <button type="submit" class="btn btn-warning mt-2">Save</button>
    </form>
  </section>
</body>    
  